{
  "name": "mmcq.js",
  "version": "1.2.4",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "repository": "https://github.com/0x-jerry/mmcq.js.git",
  "author": "Jerry Wang <x.jerry.wang@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "dev:wasm": "npm run wasm:dev && vite",
    "wasm": "wasm-pack build ./assembly-rust --target web",
    "wasm:dev": "wasm-pack build ./assembly-rust --target web --dev",
    "build": "npm run build:lib && cp assembly-rust/pkg/mmcq_bg.wasm dist/mmcq_bg.wasm",
    "build:lib": "tsup",
    "build:docs": "vite build",
    "release": "x-release"
  },
  "tsup": {
    "entry": [
      "core/index.ts"
    ],
    "format": [
      "cjs",
      "esm",
      "iife"
    ],
    "dts": true,
    "clean": true,
    "globalName": "MMCQJS"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@0x-jerry/x-release": "^0.3.2",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tsup": "^7.0.0",
    "typescript": "^5.0.0",
    "vite": "^3.0.0"
  }
}